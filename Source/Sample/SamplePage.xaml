<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" xmlns:local="clr-namespace:Sample" xmlns:controls="clr-namespace:Gaugable.Forms.Plugin.Core;assembly=Gaugable.Forms.Plugin.Core" x:Class="Sample.SamplePage">
	<StackLayout Margin="0,20,0,0">
		<controls:Gauge x:Name="gauge" Color="Purple" HeightRequest="100" HorizontalOptions="FillAndExpand" Progress="{Binding Progress}">
			<controls:Gauge.RangeDefinition>
				<controls:Range Min="0" Max="30" Color="Red" />
				<controls:Range Min="30" Max="50" Color="Yellow" />
				<controls:Range Min="50" Max="75" Color="Green" />
				<controls:Range Min="75" Max="85" Color="Yellow" />
				<controls:Range Min="85" Max="100" Color="Red" />
			</controls:Gauge.RangeDefinition>
		</controls:Gauge>
		<Label Text="Progress Value" />
		<Slider x:Name="slider" Value="{Binding Progress}" Minimum="0" Maximum="100" Scale="1"/>
	</StackLayout>
</ContentPage>